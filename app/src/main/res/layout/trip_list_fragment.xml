<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:fab="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/tripspotlistlayout">

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tripspotlistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:layout_marginTop="20dp"/>

</LinearLayout>


    <FrameLayout
        android:id="@+id/fab_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/tripModify"
            android:src="@drawable/ic_add_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            fab:fab_addButtonColorNormal="@color/primary"
            fab:fab_addButtonColorPressed="@color/primary_darker"
            fab:fab_addButtonPlusIconColor="@color/white"
            fab:fab_addButtonStrokeVisible="false"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_labelsPosition="left">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/AddSpotInTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/primary_dark"
                fab:fab_colorPressed="@color/primary_darker"
                fab:fab_plusIconColor="@color/white"
                fab:fab_icon="@drawable/ic_place_white_24dp"
                fab:fab_size="mini"
                fab:fab_title="Add Spot to Trip" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/primary_dark"
                fab:fab_colorPressed="@color/primary_darker"
                fab:fab_plusIconColor="@color/white"
                fab:fab_icon="@drawable/ic_trip_white_24dp"
                fab:fab_size="mini"
                fab:fab_title="Edit Trip" />



        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </FrameLayout>
</FrameLayout>
