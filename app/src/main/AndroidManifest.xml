<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tripacker.tripacker">


    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".view.activity.SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".view.activity.SpotViewActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.SpotEditActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".view.activity.TripViewActivity"
            android:label="@string/title_activity_trip_view"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
