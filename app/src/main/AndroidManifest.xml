<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tripacker.tripacker">


    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.LoginActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".view.activity.SignupActivity"
            android:theme="@style/AppTheme.Dark" />
        <activity
            android:name=".view.activity.SpotViewActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.SpotCreateActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.SpotEditActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".view.activity.ViewFollowingActivity"
            android:label="@string/title_activity_view_following_view"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".view.activity.ViewProfileActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".view.activity.TripViewActivity"
            android:label="@string/title_activity_trip_view"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".view.activity.TripCreateActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".view.activity.TripActivity"
            android:label="@string/title_activity_trip"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".view.activity.TripEditActivity"
            android:label="@string/title_activity_trip_edit_view"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".view.activity.TripEditSpotActivity"
            android:label="@string/title_activity_trip_edit_spot"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".view.activity.SearchResultsActivity"
            android:label="@string/title_activity_search_results">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

        </activity>
    </application>

</manifest>
